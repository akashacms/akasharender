<head>
<meta charset="utf-8" />
<!-- Use the .htaccess and remove these lines to avoid edge case issues. More info: h5bp.com/i/378 -->
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title>{{ title | escape }}</title>
{% import "ak_core_macros.njk" as ak_core with context %}

{# {{ ak_core.stylesheets() }} #}
{% akstylesheets %}
{% endakstylesheets %}
{# {{ ak_core.headerJavaScript() }} #}
{% akheaderjs %}
{% endakheaderjs %}
{{ ak_core.rssHeaderMeta("/rss-for-header.xml") }}
{{ ak_core.externalStylesheet("http://external.site/foo.css") }}
{{ ak_core.DNSPrefetch("we must have control", [ "foo1.com", "foo2.com", "foo3.com" ] )}}
{{ ak_core.googleSiteVerification("We are good") }}
{{ ak_core.XMLSitemap("/sitemap.xml") }}
{{ ak_core.XMLSitemap("/foo-bar-sitemap.xml", "Foo Bar Sitemap") }}
</head>
<body>

<h1>{{ title | escape }}</h1>

<section id="teaser"><ak-teaser></ak-teaser></section>

{% include "inclusion.html" %}

{% include "inclusion2.html" %}

<article id="original">
    {{ content }}
</article>

{# {{ ak_core.footerJavaScript() }} #}
{% akfooterjs %}
{% endakfooterjs %}
</body>
</html>
